<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    style="@style/lock_price_widget_layout"
    >
    <TextView
        android:id="@+id/price"
        style="@style/lock_price_widget_price"
        android:text="@string/price_terse_dummy"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/currency"
            style="@style/lock_price_widget_currency"
            />
        <TextView
            android:id="@+id/exchange"
            style="@style/lock_price_widget_exchange"
            />
    </LinearLayout>
</LinearLayout>
